<form>
  <div class="form-group">
    <%= form_for(item) do |f| %>
      <% if item.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

          <ul>
          <% item.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
  </div>

  <div class="form-group">
    <div class="name-field">
      <div class="col-sm-3">
        <%= f.label :name %>
      </div>
      <div class="col-sm-9">
        <%= f.text_field :name %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="description-field">
      <div class="col-sm-3">
        <%= f.label :description %>
      </div>
      <div class="col-sm-9">
        <%= f.text_area :description %>
      </div>
    </div>
  </div>

  <div class="form-group">
  <%- containers = Container.all %>
  <div class="container-field">
    <div class="col-sm-3">
      <%= f.label :container %>
    </div>

    <div class="col-sm-9">
      <%= f.select :container_id, containers.collect { |c| [ c.name, c.id, ] }, {}, { "data-live-search" => true, }%>
    </div>
  </div>
  </div>

  <div class="form-group">
  <div class="field">
    <%= f.label :count %>
    <%= f.number_field :count %>
  </div>
  </div>

  <div class="form-group">
  <div class="field">
    <%= f.label :last_used_at %>
    <%= f.datetime_select :last_used_at %>

  </div>
  </div>

  <div class="form-group">
  <div class="radio-button">
    <span><%= f.label :notification_style, :class => "radio-inline" %></span>

    <span><%= f.collection_radio_buttons :notification_style, Item::NOTIFICATION_STYLES, ->(value) { value }, ->(text) { text }, { allow_blank: false } %></span>
  </div>
    </div>

        <div class="form-group">
  <div class="checkbox">
    <span><%= f.label :notification_frequencies, "Notify when unused", :class => "checkbox inline" %></span>
    <span><%= f.collection_check_boxes :notification_frequencies, Item::NOTIFICATION_FREQUENCIES, ->(value) { value }, ->(text) { text }, { include_hidden: false } %></span>
  </div>
          </div>

        <div class="form-group">
  <div class="actions">
    <%= f.submit %>
  </div>
          </div>
<% end %>
</form>