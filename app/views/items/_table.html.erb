<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Contained In</th>
      <th>Count</th>
      <th>Last used at</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td><%= item.container.name %></td>
        <td><%= item.count %></td>
        <td><%= item.last_used_at %></td>
        <td><%= link_to 'Show', item, class: "btn btn-info btn-sm" %></td>
        <td><%= link_to 'Edit', edit_item_path(item), class: "btn btn-info btn-sm" %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
